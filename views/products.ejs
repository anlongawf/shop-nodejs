<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Danh sách sản phẩm - Ans Studio</title>
  
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    .logo {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-weight: 700;
      font-size: 2.5rem;
      color: #0d6efd; 
      letter-spacing: 0.1em;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
    }
    .product-link:hover {
      color: #0d6efd;
      text-decoration: none;
    }
  </style>
</head>
<body class="bg-light">

  <!-- Logo -->
  <header class="container my-4 text-center">
    <div class="logo">
      Ans Studio
    </div>
  </header>

  <main class="container">
    <h1 class="mb-4 text-center text-3xl font-semibold text-gray-700">Danh sách sản phẩm</h1>
<% products.forEach(product => { %>
  <li>
    <a href="/product/<%= product.id %>">
      <% if (product.images && product.images.length > 0) { %>
        <img src="/uploads/<%= product.images[0].filename %>" alt="<%= product.name %>" width="80" style="margin-right: 5px;" />
      <% } %>
      <%= product.name %> - <%= product.price %> VNĐ
    </a>
  </li>
<% }) %>



    </div>
  </main>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
